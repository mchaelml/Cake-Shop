<!DOCTYPE html>
<html>
<head>
    <style>
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 40px;
            background-color: #158cba;
            color: whitesmoke;
            border-color: #127ba3;
            border-top-color: rgb(18, 123, 163);
            border-right-color: rgb(18, 123, 163);
            border-bottom-color: rgb(18, 123, 163);
            border-left-color: rgb(18, 123, 163);
        }

            .footer .container {
                width: auto;
                max-width: 680px;
                padding: 0 15px;
            }

        .hr {
            position: fixed;
            left: 1%;
            width: 98%;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Cake Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content">
        @RenderBody()
        <hr />



    </div>



    @*    @Scripts.Render("~/bundles/jquery")*@
    @*    @Scripts.Render("~/bundles/bootstrap")*@
    @*    @Scripts.Render("~/bundles/datatables")*@
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)


    <footer class="navbar-fixed-bottom">
        <div class="footer">

            @*<p style="text-align: center; align-content: center; padding-top: 10px"> Email : CakeBakery@bake.cake</p>*@
            <div class="row">
                <div class="col-md-4 left">
                    <p style="text-align: center; align-content: center; padding-top: 10px"> Email : CakeBakery@bake.cake</p>

                </div>
                <div class="col-md-4 center">
                    <p style="text-align: center; align-content: center; padding-top: 10px"> @DateTime.Now.Year - M32COM Internet Systems Development Cake Shop</p>

                </div>
                <div class="col-md-4 right">
                    <p style="text-align: center; align-content: center; padding-top: 10px"> Licensed by Coventry University</p>

                </div>


            </div>
        </div>


    </footer>
</body>






</html>